<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white">

    <!-- Foto Profil -->
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_person_black"
        app:civ_border="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/bluedark" />

    <!-- Waktu -->
    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="01/06/2025"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

    <!-- Nama & Pesan -->
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileIv"
        android:layout_toStartOf="@id/timeTv"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namaPengirimTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengirim"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Pesan..."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Status Pesan -->
    <TextView
        android:id="@+id/isSeenTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileIv"
        android:layout_alignParentEnd="true"
        android:text="Dilihat"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="6dp" />

    <!-- Garis Bawah -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/isSeenTv"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC" />

</RelativeLayout>
