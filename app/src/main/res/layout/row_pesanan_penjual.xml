<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <!-- Foto Profil Pemesan -->
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePmsn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/bluedark"
        android:src="@drawable/ic_baseline_person_black"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <!-- Icon Navigasi Next -->
    <ImageButton
        android:id="@+id/nextIv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_navigate_next"
        android:contentDescription="Lanjut" />

    <!-- Tanggal -->
    <TextView
        android:id="@+id/dateIdTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profilePmsn"
        android:layout_toStartOf="@id/nextIv"
        android:layout_marginEnd="8dp"
        android:text="dd/MM/yyyy"
        android:textColor="@color/merah"
        android:fontFamily="sans-serif"
        android:textStyle="bold" />

    <!-- Info -->
    <TextView
        android:id="@+id/infoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateIdTv"
        android:layout_toStartOf="@id/nextIv"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Info Text"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <!-- Informasi Pesanan -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profilePmsn"
        android:layout_toStartOf="@id/nextIv"
        android:layout_alignTop="@id/profilePmsn"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/pesananIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan : 12345"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namaTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemesan"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/jumlahTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:textColor="@color/black"
            android:fontFamily="sans-serif" />
    </LinearLayout>

</RelativeLayout>
