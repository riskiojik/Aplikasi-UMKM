<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Kontainer utama toko -->
    <RelativeLayout
        android:id="@+id/RlToko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <!-- Gambar toko -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/TokoIv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_person_black"
            android:clickable="false"
            android:focusable="false" />

        <!-- Ikon status online -->
        <ImageView
            android:id="@+id/tokoOnlineIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/TokoIv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/circle_online"
            android:contentDescription="Status toko online" />

        <!-- Label tutup -->
        <TextView
            android:id="@+id/tokoTutupTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tokoOnlineIv"
            android:layout_alignEnd="@id/tokoOnlineIv"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="Tutup"
            android:textSize="12sp"
            android:textColor="@color/bluedark"
            android:background="@android:color/holo_red_light" />

        <!-- Tombol next -->
        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_baseline_navigate_next"
            android:contentDescription="Lihat detail toko" />

        <!-- Informasi toko -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/TokoIv"
            android:layout_toStartOf="@id/nextIv"
            android:layout_alignTop="@id/TokoIv"
            android:orientation="vertical"
            android:paddingEnd="8dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/namaTokoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Toko"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor HP"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="15sp"
                android:textColor="#000000" />

            <RatingBar
                android:id="@+id/RatingBr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.5"
                style="?android:attr/ratingBarStyleSmall" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Garis pembatas -->
    <View
        android:layout_below="@id/RlToko"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#CCCCCC" />

</RelativeLayout>
