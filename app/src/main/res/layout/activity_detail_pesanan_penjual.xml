<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailPesananPenjualActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blueawan"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_arrow_back"
            android:scaleType="centerInside"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Detail Pesanan"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/writeReview_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:scaleType="centerInside"
            android:contentDescription="Tulis ulasan" />

        <ImageButton
            android:id="@+id/mapBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toStartOf="@id/writeReview_btn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_dialog_map"
            android:scaleType="centerInside"
            android:contentDescription="Lihat peta" />
    </RelativeLayout>

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Gambar profil -->
            <ImageView
                android:id="@+id/profilePmsn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_person_yelow"
                android:contentDescription="Foto pemesan" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TableRow>
                    <TextView
                        android:text="Id Pesanan"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/IdPesananTv"
                        android:text="12345678"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Data Pesanan:"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/PesananTv"
                        android:text="Produk A, Produk B"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Status:"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/statusPesananTv"
                        android:text="Dalam Pengiriman"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Nama Pemesan: "
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/NamaPemesanTv"
                        android:text="Aldi"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Email:"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/EmailPesananTv"
                        android:text="aldifebriyan@gmail.com"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Nomor HP:"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/NomerHpPesananTv"
                        android:text="081234567890"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Jumlah Produk:"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/JumlahProdukPesananTv"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Total Harga:"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/TotalHargaPesananTv"
                        android:text="Rp 250.000"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Alamat:"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/AlamatPesananTv"
                        android:text="Pancor,Selong"
                        android:textColor="#000000"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barang Pesanan"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:background="@color/blueawan"
        android:padding="8dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ItemsRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        tools:listitem="@android:layout/simple_list_item_1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blueawan"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_navigation" />
</LinearLayout>
