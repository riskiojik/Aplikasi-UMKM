<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".TokoDetailActivity">

    <!-- HEADER FOTO & TOOLBAR -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:elevation="4dp">

        <!-- Foto Toko -->
        <ImageView
            android:id="@+id/TokoIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:contentDescription="Foto Toko" />

        <!-- Overlay Info Toko -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="#80041B37">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaTokoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Toko"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0812xxxxxxx"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@contoh.com"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/addressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Toko"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tokoTutupTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Buka"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="6dp" />

            <TextView
                android:id="@+id/DelieveryEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tokoTutupTv"
                android:layout_alignParentEnd="true"
                android:text="Pengiriman"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DelieveryEt"
                android:layout_alignParentEnd="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="4dp" />

            <!-- Tombol Aksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/TeleponIb"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_call"
                    android:contentDescription="Telepon"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/mapIb"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_dialog_map"
                    android:contentDescription="Lihat di Peta"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/pesanIb"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_send"
                    android:contentDescription="Pesan Toko"
                    app:tint="@color/black" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/blueawan"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_arrow_back"
                android:contentDescription="Kembali"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Detail Toko"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_Reviews"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Lihat Review"
                app:tint="@android:color/white" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true">

                <ImageButton
                    android:id="@+id/btn_cart"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Keranjang Belanja"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/jumlahCartTv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>

    <!-- PRODUK SECTION -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/ProdukRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <EditText
                android:id="@+id/serachProdukEt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_baseline_search"
                android:drawablePadding="10dp"
                android:hint="Cari Produk..."
                android:padding="10dp"
                android:layout_marginEnd="60dp" />

            <ImageButton
                android:id="@+id/categoryIbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignTop="@id/serachProdukEt"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Filter Kategori"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/filterProdukTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/serachProdukEt"
                android:layout_marginTop="10dp"
                android:text="Tampilkan Semua Produk"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/showProdukRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/filterProdukTv"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@android:layout/simple_list_item_1" />
        </RelativeLayout>
    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueawan"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_navigation" />
</LinearLayout>
