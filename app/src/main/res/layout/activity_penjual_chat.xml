<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979696">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blueawan"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Foto Profil -->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profileIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/whatsapp_image_2025_08_03_at_05_55_38"
                app:civ_border="true"
                app:civ_border_width="1dp"
                app:civ_border_color="@android:color/white" />


            <!-- Nama & Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aldi Febriyan"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/StatusUserTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Daftar Chat -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatPenjualRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/chatLayout"
        android:padding="8dp" />

    <!-- Form Chat -->
    <RelativeLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="8dp">

        <!-- Input Pesan -->
        <EditText
            android:id="@+id/pesanEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toStartOf="@id/sendBtn"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_chat"
            android:hint="Ketik pesan..."
            android:padding="12dp"
            android:inputType="textCapSentences|textMultiLine" />

        <!-- Tombol Kirim -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_send"
            app:backgroundTint="@color/bluesky" />
    </RelativeLayout>

</RelativeLayout>
