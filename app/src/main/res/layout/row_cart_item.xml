<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white">

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/namaProdukTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif" />

    <!-- Tombol Hapus (Icon + Text) -->
    <LinearLayout
        android:id="@+id/hapusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/namaProdukTv"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#B31010" />

        <TextView
            android:id="@+id/hapusProdukTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:textColor="#B31010"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Harga Per Item + Quantity -->
    <LinearLayout
        android:id="@+id/hargaQuantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaProdukTv"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hargaPerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 5.000 / Mangkok"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/produkquantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[2]"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Total Harga -->
    <TextView
        android:id="@+id/totalHargaItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hargaQuantityLayout"
        android:layout_marginTop="8dp"
        android:text="Total: Rp. 10.000"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif" />

    <!-- Garis Pembatas -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/totalHargaItemTv"
        android:layout_marginTop="10dp"
        android:background="#5E5E5E" />


</RelativeLayout>
