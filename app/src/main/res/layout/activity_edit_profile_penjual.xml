<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E2E2"
    tools:context=".penjual.EditProfilePenjualActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blueawan"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_arrow_back"
            android:contentDescription="Kembali"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/gps_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_mylocation"
            android:contentDescription="GPS"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <!-- Foto Profil -->
    <ImageView
        android:id="@+id/profileTv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/whatsapp_image_2025_08_03_at_05_55_38" />

    <!-- Form Input dalam ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileTv"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_01"
                android:hint="Nama Lengkap"
                android:drawableStart="@drawable/ic_baseline_person_black"
                android:padding="12dp" />

            <EditText
                android:id="@+id/JenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_01"
                android:hint="Jenis Kelamin"
                android:drawableStart="@drawable/ic_baseline_jk"
                android:padding="12dp" />

            <EditText
                android:id="@+id/nametokoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_01"
                android:hint="Nama Toko"
                android:drawableStart="@drawable/ic_baseline_storefront"
                android:padding="12dp" />

            <EditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_01"
                android:hint="Nomor HP"
                android:drawableStart="@drawable/ic_baseline_phone_android"
                android:inputType="phone"
                android:padding="12dp" />

            <EditText
                android:id="@+id/DelieveryEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_01"
                android:hint="Biaya Pengiriman"
                android:drawableStart="@drawable/ic_baseline_ongkos_kirim"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <EditText
                android:id="@+id/addressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_01"
                android:hint="Alamat Lengkap"
                android:drawableStart="@drawable/ic_baseline_location_on"
                android:inputType="textPostalAddress"
                android:padding="12dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/TokoBukaSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Toko Buka" />

            <Button
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:background="@color/blueawan"
                android:text="UPDATE"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
