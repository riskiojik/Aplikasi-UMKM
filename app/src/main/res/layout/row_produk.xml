<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Kontainer utama item -->
    <RelativeLayout
        android:id="@+id/cardItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <!-- Foto Produk -->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/produkIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_shopping_cart_yellow"
            app:civ_border="true"
            app:civ_border_color="@color/bluedark"
            app:civ_border_width="2dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Konten teks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/produkIconIv"
            android:layout_alignTop="@id/produkIconIv"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="48dp"
            android:orientation="vertical">

            <!-- Nama produk dan diskon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Produk"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/diskonHargaEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_diskon1"
                    android:padding="5dp"
                    android:text="50% OFF"
                    android:textColor="#E60C0C"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Deskripsi produk -->
            <TextView
                android:id="@+id/deskripsiEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Deskripsi Produk"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Stok -->
            <TextView
                android:id="@+id/stokTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Stok: 10 Bungkus"
                android:textColor="@android:color/white"
                android:background="@drawable/stok"
                android:padding="4dp"
                android:textStyle="bold" />

            <!-- Harga -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/diskonHargaNoteEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 100"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Rp. 10000"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Icon navigasi -->
        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next"
            android:padding="5dp"
            android:contentDescription="Lihat Detail"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </RelativeLayout>

</RelativeLayout>
