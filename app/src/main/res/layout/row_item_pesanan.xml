<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Gambar Produk -->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/produkIconIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_add_shopping_cart_yellow"
            app:civ_border="true"
            app:civ_border_color="@color/bluedark"
            app:civ_border_width="2dp" />

        <!-- Ikon Navigasi -->
        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_baseline_navigate_next"
            android:contentDescription="Lihat detail" />

        <!-- Kontainer Informasi Produk -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/produkIconIv"
            android:layout_toStartOf="@id/nextIv"
            android:layout_alignTop="@id/produkIconIv"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <!-- Nama Produk -->
            <TextView
                android:id="@+id/namaProdukTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif" />

            <!-- Total Harga -->
            <TextView
                android:id="@+id/hargaItemTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rp. 10.000"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <!-- Harga per item dan jumlah -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hargaPerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 5000/pcs"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/produkquantityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="[4]"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
