<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProdukDetailActivity">

    <!-- Konten Scroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blueawan"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/produkIconIv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_add_shopping_cart_yellow"
                    app:civ_border="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/bluesky" />

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nama Produk"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/produkquantityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Produk"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/deskripsiEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi produk"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/diskonHargaEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_diskon1"
                    android:padding="4dp"
                    android:text="50% OFF"
                    android:textColor="#E60C0C"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Konten Harga dan Jumlah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Harga -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.10000"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/diskonHargaNoteEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Rp.100"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Total Harga -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/totalHargaTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga: Rp."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/totalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Total Harga"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Kontrol Jumlah -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/KurangIb"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_remove_circle"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Kurangi jumlah"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/quantityTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />

                    <ImageButton
                        android:id="@+id/TambahIb"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_add_circle"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Tambah jumlah"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Catatan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/perhatian"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <!-- Tombol Tambah ke Keranjang -->
                <Button
                    android:id="@+id/TambahKeranjangBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_03"
                    android:text="Masukkan ke keranjang"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blueawan"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>
